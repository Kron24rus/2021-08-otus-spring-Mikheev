<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="mockIoService" class="org.mockito.Mockito" factory-method="mock">
        <constructor-arg value="com.mikheev.homework.services.IOService"/>
    </bean>

    <bean id="csvReader" class="com.mikheev.homework.services.impl.CsvReaderImpl"/>

    <bean id="surveyService" class="com.mikheev.homework.services.impl.SurveyServiceImpl">
        <constructor-arg ref="csvReader"/>
        <constructor-arg ref="mockIoService"/>
        <constructor-arg name="questionsPath" value="test-csv/questions-correct.csv"/>
    </bean>

    <bean id="surveyServiceBroken" class="com.mikheev.homework.services.impl.SurveyServiceImpl">
        <constructor-arg ref="csvReader"/>
        <constructor-arg ref="mockIoService"/>
        <constructor-arg name="questionsPath" value="test-csv/questions-broken.csv"/>
    </bean>
</beans>